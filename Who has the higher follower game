from higherlower import logo
from game_data import data
from higherlower import vs
import random
# from replit import clear

def compare(A_count, B_count):
    if A_count > B_count:
        return 'a'
    elif B_count > A_count:
        return 'b'
# function to get a random person/thing

def random_person():
    return random.randint(0,49) 

should_end = False
score = 0

#person A
n = random_person()
#person B
n2 = random_person()
while n2 == n:
    n2 = random_person()


while not should_end:
    A_count = data[n]['follower_count']
    B_count = data[n2]['follower_count']
    print(f"top follow = {A_count}, bottom follow = {B_count}")
    
    print(logo)
    print(f"Compare A: {data[n]['name']}, a {data[n]['description']},  from {data[n]['country']}")
    print(vs)
    print(f"Against B: {data[n2]['name']}, a {data[n2]['description']},  from {data[n2]['country']}")
    choice = (input("Who has more followers? Type 'A' or 'B'")).lower()
 
    winner = compare(A_count, B_count) 

    if choice == winner:
        score += 1
        print(f"you're right! Current score: {score}")
        n = n2
        n2 = random_person()
        while n2 == n:
            n2 = random_person()
    else:
        print(f'You got it wrong! Final score : {score}')
        should_end = True
